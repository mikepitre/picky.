<main>
<div class="container pick-show-page">
<% if @selection.lat == "" && @selection.zip_code == "" && @foursquare.results_count == nil %>
  <div class="row">
    <div class="col s10 offset-s1">
      <h5 class="increased-spacing">We couldn't find your location. Please go back and provide your zip code.</h5>
    </div>
  </div>
<% elsif @foursquare.results_count.zero? %>
  <div class="row">
    <div class="col s10 offset-s1">
      <h5 class="increased-spacing">We couldn't find any restaurants that met your criteria. Try something more general, reset your filters, or expand the search area.</h5>
    </div>
  </div>
<% else %>
  <div class="row">
    <div class="our-pick-header centered">
      <h5>Our pick for you is:</h5>
      <h3><%= @foursquare.pick_name(params[:pick].to_i) %></h3>
    </div>
  </div>
  <div class="row">
    <div class="address col s11 offset-s1 m5 offset-m1 l4 offset-l2">
      <i class="material-icons">location_on</i><%= @foursquare.pick_name(params[:pick].to_i) %></br>
      <div class="margin-right-34"><%= @foursquare.pick_address(params[:pick].to_i).gsub(/\([^)]*\)/,"") %></div></br>
      <div class="margin-right-34"><%= @foursquare.pick_city_and_zip(params[:pick].to_i) %></div></br>
      <% unless @foursquare.pick_hours(params[:pick].to_i) == ""%>
        <i class="material-icons">schedule</i><%= @foursquare.pick_hours(params[:pick].to_i) %>
      <% end %>
    </div>
    <div class="contact col s11 offset-s1 m5 offset-m1 l5 offset-l1">
      <% if @foursquare.pick_phone_number(params[:pick].to_i) %>
        <i class="material-icons">phone</i><%= @foursquare.pick_phone_number(params[:pick].to_i) %></br>
      <% end %>
      <% if @foursquare.pick_website(params[:pick].to_i) %>
        <i class="material-icons">web</i><%= link_to @foursquare.pick_website(params[:pick].to_i).gsub(/(?:f|ht)tps?:\/[^\s]/,"").gsub(/www./,"").gsub(/([^\.com]+)$/,""), @foursquare.pick_website(params[:pick].to_i) %></br>
      <% end %>
      <i class="material-icons">credit_card</i>Price Tier: <%= "$" * @foursquare.pick_price(params[:pick].to_i).to_i %>
      </br>
      <i class="material-icons">stars</i>Rating: <%= @foursquare.pick_rating(params[:pick].to_i) %>
    </div>
  </div>
<% end %>
</div>

<div class="row">
<div class="google-maps centered">
  <% if @foursquare.results_count == nil || @foursquare.results_count.zero? %>
    <% '' %>
  <% elsif @selection.lat == ""%>
    <iframe
    width="80%"
    height="400"
    frameborder="0" style="border:0"
    src="https://www.google.com/maps/embed/v1/place?key=<%=ENV['google_maps_api_key']%>&q=<%= @foursquare.pick_name.gsub(/\&/,"")+"+"+@foursquare.pick_address(params[:pick].to_i).gsub(/\([^)]*\)/,"")+"+"+@foursquare.pick_city_and_zip(params[:pick].to_i)%>" allowfullscreen>
    </iframe>
  <% else %>
    <iframe
      width="80%"
      height="400"
      frameborder="0" style="border:0"
      src="https://www.google.com/maps/embed/v1/directions?key=<%=ENV['google_maps_api_key']%>&origin=<%=@selection.lat+","+@selection.long %>&destination=<%= @foursquare.pick_name(params[:pick].to_i).gsub(/\&/,"")+"+"+@foursquare.pick_address(params[:pick].to_i).gsub(/\([^)]*\)/,"")+"+"+@foursquare.pick_city_and_zip(params[:pick].to_i)%>" allowfullscreen>
    </iframe>
<% end %>
</div>
</div>
</main>

